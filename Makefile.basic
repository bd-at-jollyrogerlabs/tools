
CXX=g++
#CXX=clang++

DEBUG_FLAGS=-ggdb -O0

RELEASE_FLAGS=-O3

STD_FLAGS=-std=c++14

WARN_FLAGS=-Wall

INCLUDES=

LINK_DIRS=

LINK_FLAGS=

CXXFLAGS=$(STD_FLAGS) $(INCLUDES)

LDFLAGS=$(LINK_DIRS) $(LINK_FLAGS)

PROGRAM=<program name here>

bin/$(PROGRAM): $(PROGRAM).cpp
	mkdir -p @(D)
	$(CXX) $(DEBUG_FLAGS) $(CXXFLAGS) -o bin/$(PROGRAM) $^ $(LDFLAGS)
